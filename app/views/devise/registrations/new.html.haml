= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

  = devise_error_messages!

  .row
    .small-12.columns
      %div
        = f.email_field :email, :autofocus => true, :placeholder => "Email"

  .row
    .small-12.columns
      %div
        = f.password_field :password, :placeholder => "Password"

  .row
    .small-12.columns
      %div
        = f.password_field :password_confirmation, :placeholder => "Password Confirmation"
        = f.hidden_field :stripe_card_token

  .row
    .small-12.columns
      %h3 Credit Card Information

  .row
    .small-12.columns
      #stripe_error

  .row
    .small-12.columns
      %div
        = text_field_tag :card_number, nil, {placeholder: "Credit Card Number", pattern: "[0-9]*" }

  .row
    .small-6.columns
      = label_tag :card_code, "CVC"
    .small-6.columns
      = text_field_tag :card_code, nil, placeholder: '123', pattern: "[0-9]*"

  .row
    .small-12.columns
      %h5 Expiration Date
    .small-6.columns
      = select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}
    .small-6.columns
      = select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}

  .row
    .small-12.columns
      %div= f.submit "Sign Up", :class => "btn button button-blue save-button"

.row
  .small-12.columns
    = render "devise/shared/links"
