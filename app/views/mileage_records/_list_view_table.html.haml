%table.list
  %thead
    %tr
      %th Date
      %th Route
      %th Mileage
      %th
  %tbody
    -  mileage_records.each do |m|
      %tr
        %td
          = m.record_date.strftime("%m/%d")
        %td
          = m.route_description
        %td
          = number_with_delimiter(m.end_mileage)
        %td
          = link_to edit_mileage_record_path(m), class: "edit-record-link" do
            <i class="fa fa-edit edit-record"></i>
